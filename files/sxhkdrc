#### Applications

# New Tab
{super + @c, Print}
    chromium chrome-extension://miohdcikjmhdkhgfafiaonaogbloeplm/index.html

# Kitty
{control + alt + @t, super + @Return}
	kitty

super + @g
	kitty --session ~/Dotfiles/files/servers.session


super + @space
	rofi -show combi

####  Misc

# Reload
super + @Escape
	pkill -USR1 -x sxhkd

# Close focused application

super + {@d, @h, @Up}
	xdotool getwindowfocus {windowquit, windowminimize, windowsize 100% 100%}

# Shutdown and Reboot

# control + shift + alt + @down
control + shift + alt + {Right, Down}
	sudo systemctl {reboot,poweroff}

button2
	xdotool key alt+Tab

button10
	~/Dotfiles/files/toggle_chat
	
{_,shift,control} + {button9,button8}
	xdotool key { , , } {Home,End}



# XF86AudioLowerVolume
#     chvolume -5%

# XF86AudioRaiseVolume
#     chvolume +5%

# XF86AudioMute
#     chvolume +0% toggle

XF86MonBrightness{Up,Down}
    light -{A,U} 5




# Quit or restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# Close or kill focused node
super + {_,shift + }w
	bspc node -{c,k}


# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# focus the last node/desktop
{alt, super} + Tab
	bspc {node,desktop} -f last


# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + l 
	bspc quit