#### Applications

# New Tab
super + shift + @c
    chromium chrome-extension://miohdcikjmhdkhgfafiaonaogbloeplm/index.html
super + {@z, @x, @c, @v, @b}
	launch {schildichat schildichat-desktop, webcord, chromium, code, kitty}


# Kitty
{control + alt + @t, super + @Return}
	kitty


super + @space
	rofi -show combi

####  Misc

# Reload
super + @Escape
	pkill -USR1 -x sxhkd

# Close focused application

super + {@d, @h, @Up}
	xdotool getwindowfocus {windowquit, windowminimize, windowsize 100% 100%}

# Shutdown and Reboot

# control + shift + alt + @down
control + shift + alt + {Right, Down}
	sudo systemctl {reboot,poweroff}

button2
	xdotool key alt+Tab

button10
	~/Dotfiles/files/toggle_chat
	
{_,shift,control} + {button9,button8}
	xdotool key { , , } {Home,End}


XF86AudioStop
    playerctl pause

XF86AudioPlay
    playerctl play-pause

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

XF86AudioLowerVolume
    chvolume -5%

XF86AudioRaiseVolume
    chvolume +5%

XF86AudioMute
    chvolume +0% toggle

XF86MonBrightness{Up,Down}
    chlight -{A,U} 5




# Quit or restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# Close or kill focused node
super + {_,shift + }w
	bspc node -{c,k}


# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
	
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# focus or send to the given desktop
super + {_,shift + }{KP_End, KP_Down, KP_Next, KP_Left, KP_Begin, KP_Right, KP_Home, KP_Up, KP_Prior, KP_Insert}
	bspc {desktop -f,node -d} '^{1-9,10}'


# focus the last node/desktop
{alt, super} + Tab
	bspc {node,desktop} -f last

# Focus the next node in the same desktop
super + {_, shift +} grave
	bspc node -f {next,prev}.local

# Focus the next/previous desktop
super + {Left, Right}
	bspc desktop -f {prev,next}.local

super + l 
	betterlockscreen -l